                            android:gravity="center"
                            android:text="DIET PLAN FOR PREGNANT WOMEN"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                            android:textColor="#FF1E1E"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/dp_pregnant"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/children_dietplan"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#EBEFED"
                    android:elevation="10dp"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/bebas_neue"
                            android:gravity="center"
                            android:text="DIET PLAN FOR  CHILDRENS"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                            android:textColor="#FF1E1E"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/dp_child"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>
        </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>

